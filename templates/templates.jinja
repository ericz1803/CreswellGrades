{# navbar with just the navbar-brand and logout #}

{% set basicnav %}
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="/"><h4>Creswell Grades</h4></a>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href='/logout'><h5>Logout</h5></a>
            </li>
        </ul>
    </nav>
{% endset %}

{# navbar with just the navbar-brand #}

{% set emptynav %}
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="/"><h4>Creswell Grades</h4></a>
    </nav>
{% endset %}

{# 
    left: left aligned in navbar, add <li>
    right: right aligned in navbar, add <li>
#}

{% macro custom_navbar(left, right) %}
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <a class="navbar-brand" href="/"><h4>Creswell Grades</h4></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                {{ left }}
            </ul>
            <ul class="navbar-nav">
                {{ right }}
            </ul>
        </div>
    </nav>
{% endmacro %}